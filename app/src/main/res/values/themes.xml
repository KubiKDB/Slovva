<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="themeColorBG" format="reference|color" />
    <attr name="themeColorTXT" format="reference|color" />
    <attr name="themeColorSTR" format="reference|color" />

    <style name="Theme.Slovva" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7FCEFF</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseActivity">
    </style>
    <style name="NightActivity" parent="@style/BaseActivity">
        <item name="themeColorBG">#000000</item>
        <item name="themeColorTXT">#FFFFFF</item>
        <item name="themeColorSTR">#60FFFFFF</item>
    </style>
    <style name="DayActivity" parent="@style/BaseActivity">
        <item name="themeColorBG">#d3d3d3</item>
        <item name="themeColorTXT">#000000</item>
        <item name="themeColorSTR">#60000000</item>
    </style>
</resources>